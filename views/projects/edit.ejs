<% include ../partials/header %>

<a href="/projects" class="btn btn-outline-secondary">Back all to projects</a>

<div class="row">
	<h1 style="text-align: center;">Edit <%= project.name %></h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/projects/<%= project._id %>?_method=PUT" method="POST">

			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control" type="text" name="project[name]" value="<%= project.name %>">
			</div>
			<div class="form-group">
				<label for="architects">Architects</label>
				<input class="form-control" type="text" name="project[architects]" value="<%= project.architects %>">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name="project[location]" value="<%= project.location %>">
			</div>
			<div class="form-group">
				<label for="year">Year</label>
				<input class="form-control" min="1800" step="1" type="number" name="project[year]" value="<%= project.year %>">
			</div>
			<div class="form-group">
				<label for="image">Image</label>
				<input class="form-control" type="text" name="project[image]" value="<%= project.image %>">
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input class="form-control" type="text" name="project[description]" value="<%= project.description %>">
			</div>
			<div class="form-group">
				<label for="source">Source</label>
				<input class="form-control" type="text" name="project[source]" value="<%= project.source %>">
			</div>
			<div class="form-group">
				<input class="btn btn-outline-dark" type="submit" value="Submit">
			</div>
		</form>
	</div>
</div>

<% include ../partials/footer %>