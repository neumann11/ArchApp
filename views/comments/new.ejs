<% include ../partials/header %>

<div class="container">
	<div class="row">
	    <div style="width: 30%">
	    	<h3 style="text-align: left">Add New Comment to <%= project.name %></h3>
	        <form action="/projects/<%= project._id %>/comments" method="post">
	            <div class="form-group">
	                <label for="name">Comment Text:</label>
	                <textarea class="form-control" type="text" name="comment[text]" rows="4" cols="50"></textarea>
	            </div>
	            <div class="form-group">
	                <button class="btn btn-sm btn-outline-dark">Submit</button>
	            </div>
	        </form>
			<a href="/projects/<%= project._id %>">Go back</a>
	    </div>
	</div>
</div>

<% include ../partials/footer %>